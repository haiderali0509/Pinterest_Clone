<% include ./partials/header.ejs %>
    <div class="w-full min-h-screen bg-white px-10 py-5">
        <h1 class="text-xl">Create New Post</h1>
        <hr class="opacity-10 mt-3">
        <form action="/createpost" method="post" enctype="multipart/form-data">
            <input class="block w-1/3 px-3 py-2 rounded-md" type="file" name="postimage">
            <input class="block w-1/3 px-3 py-2 mt-2 border-2 rounded-md" type="text" name="content" id="content">
            <textarea class="block h-60 w-1/3 px-3 py-2 mt-2 border-2 rounded-md" type="text" name="description"
                id="description"></textarea>
            <input class="block w-1/3 px-3 py-2 mt-2 bg-red-700 text-white border-2 rounded-md" type="submit"
                name="submit" value="Create Post">
        </form>
    </div>
    <% include ./partials/footer.ejs %>