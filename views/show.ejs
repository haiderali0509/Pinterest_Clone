<% include ./partials/header.ejs %>
    <div class="w-full min-h-screen bg-zinc-100 px-10 py-5">
        <div class="cards flex flex-wrap gap-10">
            <% user.posts.forEach(element=> { %>
                <div class="card w-32">
                    <div class="bg-sky-200 rounded-lg w-full h-40 overflow-hidden">
                        <img class="w-full h-full object-cover" src="/images/uploads/<%= element.postimage %>" alt="">
                    </div>
                    <div class="content">
                        <h5 class="mt-2 text-sm">
                            <%= element.content %>
                        </h5>
                    </div>
                </div>

                <% }); %>
        </div>
    </div>
    <% include ./partials/footer.ejs %>